rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - require authentication and ownership
    match /users/{userId} {
      // Require auth and ownership (removed demo-user for production)
      allow read, write: if isOwner(userId);
      
      // Wallet subcollection
      match /wallet/{walletId=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Data Sources subcollection
      match /dataSources/{sourceId=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Activities subcollection
      match /activities/{activityId=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Legacy collections for backward compatibility
      match /csv-files/{fileId=**} {
        allow read, write: if isOwner(userId);
      }
      
      match /uploads/{uploadId=**} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Test collection for debugging (can be removed in production)
    match /test/{document=**} {
      allow read, write: if true; // Beta: Allow all test access
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

