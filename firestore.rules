rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Top-level datasets collection - allow public read of published datasets
    match /datasets/{datasetId} {
      allow read: if resource.data.status == 'published' || resource.data.status == null;
      allow write: if false; // Only allow through user collection
    }
    
    // Users collection
    match /users/{userId} {
      // AI Lab connections - allow public read (for discovery API)
      match /aiLabConnections/{document=**} {
        allow read: if true;
        allow write: if isOwner(userId);
      }
      
      // User datasets - PUBLIC READ for published datasets, owner can write
      match /datasets/{datasetId} {
        allow read: if resource.data.status == 'published'; // Allow public read of published datasets
        allow write: if isOwner(userId); // Only owner can write
      }
      
      // Access requests - owner only
      match /accessRequests/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // API keys - owner only
      match /apiKeys/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Wallet data - owner only
      match /wallet/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Data sources - owner only
      match /dataSources/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Activities - owner only
      match /activities/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Connections - owner only
      match /connections/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Repositories - owner only
      match /repositories/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // User settings and other data - owner only
      match /{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Allow user read/write their own user document
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Test collection for debugging (can be removed in production)
    match /test/{document=**} {
      allow read, write: if true;
    }
  }
}